{% if users|length > 0%}
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-4">
        {% for followUser in users %}
            <div class="flex justify-between items-center">
                <div>
                    <a href="{{ path('app_profile', {id: followUser.id}) }}">
                        <div class="text-lg">
                            {{ followUser.userProfile.name ?? followUser.email }}
                        </div>
                        <div class="text-gray-500">
                            {{ followUser.email }}
                        </div>
                    </a>
                </div>
                <div>
                    {{ include('follower/_follow_button.html.twig', { userToFollow: followUser }) }}
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="w-full text-center">
        <div class="font-bold text-gray-600 dark:text-gray-300">
            Nothing to show...
        </div>
        <div class="text-gray-400 dark:text-gray-500">
            The list is currently empty.
        </div>
    </div>
{% endif %}