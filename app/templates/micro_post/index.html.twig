{% extends 'base.html.twig' %}

{% block body %}
    <div>
        {% if posts|length > 0 %}
            {% for post in posts %}
                <div>
                    <a href="{{ url('app_micro_post_show', { post: post.id }) }}">{{ post.title }}</a>
                </div>
            {% endfor %}
        {% else %}
            <p>No content</p>
        {% endif %}
    </div>
{% endblock %}