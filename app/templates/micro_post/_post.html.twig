{% block post %}
    <div class="mb-4">
        <div class="text-2xl">
            <a href="{{ url('app_micro_post_show', { post: post.id }) }}">
                {{ post.title }}
            </a>
        </div>
        <div class="text-xl dark:text-gray-300">
            {{ post.text }}
        </div>
        <div class="text-gray-500 dark:text-gray-600">
            {{ post.createdAt|date("M j, Y") }}
        </div>
        <div>
            <a href="#">
                Like <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-600">0</span>
            </a>
        </div>
        <div class="text-sm text-gray-400 dark-text-gray-600">
            <a href="#">
                user@email.com
            </a>
        </div>
        <div class="flex">
            <a href="{{ path("app_micro_post_edit", { post: post.id}) }}" class="mr-2">Edit</a>
            <a href="{{ path("app_micro_post_comment", { post: post.id}) }}">Comment <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-600">
                    {{ post.comments.count }}
            </span></a>
        </div>
    </div>
{% endblock %}